<p id="notice"><%= notice %></p>

<h1>My trip plans</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.title %></td>
        <td><%= trip.summary %></td>
        <td><%= link_to 'Show', trip, :class => 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', trip, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path, :class => 'btn btn-success'  %>
