<h1 class="main-title">Trip Plans</h1>

<table class="center" border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @trip_plans.each do |trip_plan| %>
      <tr>
        <td><%= trip_plan.title %></td>
        <td><%= trip_plan.summary %></td>
        <td><%= link_to 'Show', trip_plan, :class => 'btn btn-info'  %></td>
        <td><%= link_to 'Edit', edit_trip_plan_path(trip_plan), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', trip_plan, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class="center"><%= link_to 'New Trip Plan', new_trip_plan_path, :class => 'btn btn-success' %></p>
