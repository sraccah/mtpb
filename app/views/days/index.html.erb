<h1 class="main-title">Days</h1>

<% if @days.empty? %>

  <p class="center">No days yet...click 'New Day' to create one<td>

<% else %>

  <table class="center" border="1">
    <thead>
      <tr>
        <% if @order == "DESC" %>
          <th><%= link_to 'Index', :status => 'ASC'  %></th>
        <% else %>
          <th><%= link_to 'Index', :status => 'DESC'  %></th>
        <% end %>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @days.each do |day| %>
        <tr>
          <td><%= day.id %></td>
          <td><%= day.title %></td>
          <td><%= day.description %></td>
          <td><%= link_to 'Show', day, :class => 'btn btn-info'  %></td>
          <td><%= link_to 'Edit', edit_day_path(day), :class => 'btn btn-warning'  %></td>
          <td><%= link_to 'Delete', day, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

<br>

<%= @test %>

<p class="center"><%= link_to 'New Day', new_day_path, :class => 'btn btn-success'  %></p>
